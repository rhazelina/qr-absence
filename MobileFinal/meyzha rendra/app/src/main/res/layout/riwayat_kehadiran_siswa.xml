<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:maxWidth="480dp"
        android:minWidth="320dp">

        <ImageView
            android:id="@+id/imageView30"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/data_data" />

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:src="@drawable/arrow_back" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="Riwayat Kehadiran"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/filterBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerLayout">

            <LinearLayout
                android:id="@+id/filterStatus"
                android:layout_width="90dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_81"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <TextView
                    android:id="@+id/textStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Semua"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnDropdownStatus"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginStart="1dp"
                    android:background="@null"
                    android:src="@drawable/drop_down_circle" />
            </LinearLayout>

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/filterRole"
                android:layout_width="100dp"
                android:layout_marginTop="5dp"
                android:layout_height="26dp"
                android:background="@drawable/rectangle_81"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <TextView
                    android:id="@+id/textRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Siswa"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnDropdownRole"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:background="@null"
                    android:src="@drawable/drop_down_circle" />
            </LinearLayout>

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/filterTanggal"
                android:layout_width="120dp"
                android:layout_marginTop="5dp"
                android:layout_height="26dp"
                android:background="@drawable/rectangle_81"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <TextView
                    android:id="@+id/textTanggal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="01-99-2007"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/btnCalendar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@null"
                    android:src="@drawable/calendar_month" />
            </LinearLayout>
            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:background="@null"
                android:src="@drawable/page_control" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/totalCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_250"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filterBar">

            <TextView
                android:id="@+id/tvTotalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Siswa"
                android:textColor="#040404"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTotalNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="80"
                android:textColor="#020202"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/statsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/totalCard"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:id="@+id/cardHadir"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_251"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.19">

                <TextView
                    android:id="@+id/tvHadirLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hadir"
                    android:textColor="#090909"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvHadirValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="50"
                    android:textColor="#070707"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardTerlambat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_251"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                app:layout_constraintStart_toEndOf="@id/cardHadir"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.19"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/tvTerlambatLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terlambat"
                    android:textColor="#0D0D0D"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvTerlambatValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="10"
                    android:textColor="#040404"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardIzin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_251"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                app:layout_constraintStart_toEndOf="@id/cardTerlambat"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.19"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/tvIzinLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Izin"
                    android:textColor="#070707"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvIzinValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="10"
                    android:textColor="#040404"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardSakit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_251"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                app:layout_constraintStart_toEndOf="@id/cardIzin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.19"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/tvSakitLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sakit"
                    android:textColor="#070707"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvSakitValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="10"
                    android:textColor="#040404"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardAlpha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_251"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                app:layout_constraintStart_toEndOf="@id/cardSakit"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.19"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/tvAlphaLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alfa"
                    android:textColor="#050505"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvAlphaValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="10"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRiwayatKehadiran"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statsContainer"
            android:layout_marginTop="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>