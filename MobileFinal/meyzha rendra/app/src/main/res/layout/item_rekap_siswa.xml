<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemContainer"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="1dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/rectangle_68"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="12dp">

    <!-- No -->
    <TextView
        android:id="@+id/tvNomor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Nama Siswa -->
    <TextView
        android:id="@+id/tvNama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="Nama Siswa"
        android:textColor="#000000"
        android:textSize="14sp" />

    <!-- Telepon/NISN -->
    <TextView
        android:id="@+id/tvTelepon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginEnd="-40dp"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="286789123"
        android:textColor="#000000"
        android:textSize="14sp" />

    <!-- Kelas/Jurusan -->
    <TextView
        android:id="@+id/tvMataPelajaran"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="XII RPL 2"
        android:textColor="#000000"
        android:textSize="14sp" />

    <!-- Button Lihat -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="2"
        android:gravity="center">

        <!-- Background Button -->
        <ImageButton
            android:id="@+id/btnLihat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_178"
            android:contentDescription="Lihat"
            android:scaleType="centerCrop" />

        <!-- Text Lihat -->
        <TextView
            android:id="@+id/tvLabelLihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

    </FrameLayout>

</LinearLayout>