<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:layout_marginTop="3dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="15dp"
    android:background="@drawable/rectangle_68">

    <!-- No -->
    <TextView
        android:id="@+id/tvNo"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#090909"
        android:textSize="14sp" />

    <!-- Nama -->
    <TextView
        android:id="@+id/tvNamaSiswa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:text="Siswa1"
        android:textColor="#090909"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- NISN -->
    <TextView
        android:id="@+id/tvNisn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:layout_marginEnd="4dp"
        android:text="0066779876"
        android:textColor="#090909"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Kelas - DIPERKECIL -->
    <TextView
        android:id="@+id/tvKelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="45dp"
        android:maxWidth="60dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="XII"
        android:textColor="#090909"
        android:textSize="14sp" />

    <!-- Jurusan (hidden, untuk keperluan adapter) -->
    <TextView
        android:id="@+id/tvKode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:visibility="gone" />

    <!-- Aksi - Container untuk icon bersebelahan -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Edit - Hanya Icon -->
        <LinearLayout
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="6dp"
            android:layout_marginEnd="2dp"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <!-- Di dalam item_crud_datasiswa.xml, tambahkan ImageView untuk ikon edit -->
            <ImageView
                android:id="@+id/ivEdit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit_outline_black"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>

        <!-- Hapus - Hanya Icon -->
        <LinearLayout
            android:id="@+id/btnHapus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="6dp"
            android:layout_marginStart="2dp"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_delete_outline_red"
                android:scaleType="centerInside" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>