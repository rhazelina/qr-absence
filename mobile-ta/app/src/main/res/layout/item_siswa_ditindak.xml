<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bg_shadow_bar"
    android:padding="12dp">

    <!-- BAGIAN KIRI -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- NAMA + JURUSAN -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_nama_siswa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Siswa"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#303030" />

            <TextView
                android:id="@+id/text_jurusan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="XII Mekatronika 2"
                android:textSize="14sp"
                android:textColor="#606060" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="start|center_vertical">

            <!-- BADGE 1 -->
            <LinearLayout
                android:id="@+id/badge_alpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/box_danger2"
                android:layout_marginEnd="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvalpha"
                    android:text="x Alfa"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- BADGE 2 -->
            <LinearLayout
                android:id="@+id/badge_izin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/box_pending"
                android:layout_marginEnd="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvizin"
                    android:text="x Izin"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- BADGE 3 -->
            <LinearLayout
                android:id="@+id/badge_sakit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/box_info">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tvsakit"
                    android:layout_height="wrap_content"
                    android:text="x Sakit"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- BADGE KANAN -->
    <LinearLayout
        android:id="@+id/badge_sering_absensi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/box_danger"
        android:gravity="center">

        <TextView
            android:id="@+id/tvBadgeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sering Absensi"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</LinearLayout>