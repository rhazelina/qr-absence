                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/rectangle_57" />

                        <!-- BUTTON OVERLAY -->
                        <ImageButton
                            android:id="@+id/btnRekap"
                            android:layout_width="380dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/rectangle_58" />

                        <!-- ICON + DATE -->
                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="48dp"
                            android:layout_marginTop="15dp"
                            app:srcCompat="@drawable/rectangle_243" />

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="55dp"
                            android:layout_marginTop="15dp"
                            android:text="Senin, 7 Januari 2026"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="12dp"
                            app:srcCompat="@drawable/calendar_month" />

                        <!-- TIME -->
                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="30dp"
                            android:text="08:00"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <!-- LABEL -->
                        <ImageButton
                            android:id="@+id/imageButton87"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="18dp"
                            android:layout_marginEnd="20dp"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/more_vert" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="55dp"
                            android:text="Tepat Waktu"
                            android:textColor="#020202"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="105dp"
                            android:layout_marginTop="55dp"
                            android:text="Terlambat"
                            android:textColor="#040404"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="210dp"
                            android:layout_marginTop="55dp"
                            android:text="Sakit"
                            android:textColor="#070707"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="270dp"
                            android:layout_marginTop="55dp"
                            android:text="Izin"
                            android:textColor="#050505"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="55dp"
                            android:layout_marginEnd="35dp"
                            android:text="Alpha"
                            android:textColor="#070707"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <!-- VALUE -->
                        <TextView
                            android:id="@+id/tvTepatWaktuDashboard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="55dp"
                            android:layout_marginTop="75dp"
                            android:text="0"
                            android:textColor="#001F3E"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTerlambatDashboard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="128dp"
                            android:layout_marginTop="75dp"
                            android:text="0"
                            android:textColor="#001F3E"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvSakitDashboard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="218dp"
                            android:layout_marginTop="75dp"
                            android:text="0"
                            android:textColor="#001F3E"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvIzinDashboard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="273dp"
                            android:layout_marginTop="75dp"
                            android:text="0"
                            android:textColor="#001F3E"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvAlphaDashboard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="75dp"
                            android:layout_marginEnd="43dp"
                            android:text="0"
                            android:textColor="#001F3E"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </FrameLayout>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewChart"
                    android:layout_width="0dp"
                    android:layout_height="263dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="600dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textViewGrafikBulanan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:text="Grafik Pada Hari Ini"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/barChartBulanan"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="12dp" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <FrameLayout
                    android:id="@+id/containerStats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="250dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- BACKGROUND -->
                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:outlineProvider="bounds"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/rectangle_239" />

                    <!-- CONTENT -->
                    <RelativeLayout
                        android:id="@+id/statsLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="-10dp">

                        <!-- BUTTON BACKGROUND -->
                        <ImageButton
                            android:id="@+id/imageView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="17dp"
                            android:layout_marginTop="8dp"
                            android:background="@android:color/transparent"
                            android:elevation="15dp"
                            app:srcCompat="@drawable/rectangle_237_kecil" />

                        <ImageButton
                            android:id="@+id/imageView17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="140dp"
                            android:layout_marginTop="10dp"
                            android:background="@android:color/transparent"
                            android:elevation="15dp"
                            app:srcCompat="@drawable/rectangle_237_kecil" />

                        <ImageButton
                            android:id="@+id/imageView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="268dp"
                            android:layout_marginTop="10dp"
                            android:background="@android:color/transparent"
                            android:elevation="15dp"
                            app:srcCompat="@drawable/rectangle_237_kecil" />

                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/imageView19"
                            android:layout_width="26dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="14dp"
                            android:elevation="15dp"
                            app:srcCompat="@drawable/local_library" />

                        <ImageView
                            android:id="@+id/imageView20"
                            android:layout_width="26dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="148dp"
                            android:layout_marginTop="15dp"
                            android:elevation="15dp"
                            app:srcCompat="@drawable/experiment" />

                        <ImageView
                            android:id="@+id/imageView21"
                            android:layout_width="26dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="280dp"
                            android:layout_marginTop="17dp"
                            android:elevation="15dp"
                            app:srcCompat="@drawable/newsstand" />

                        <!-- LABEL -->
                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="55dp"
                            android:layout_marginTop="18dp"
                            android:elevation="15dp"
                            android:text="Guru"
