<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rectangle_68"
    android:padding="10dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <!-- NO -->
    <TextView
        android:id="@+id/tvNo"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"/>

    <!-- NAMA GURU -->
    <TextView
        android:id="@+id/tvNamaGuru"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="Nama Guru"
        android:textSize="12sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="#000000"/>

    <!-- NO TELP -->
    <TextView
        android:id="@+id/tvNIP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="086789123"
        android:textSize="12sp"
        android:singleLine="true"
        android:gravity="center"
        android:textColor="#000000"/>

    <!-- MAPEL -->
    <TextView
        android:id="@+id/tvMapel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="Bahasa Inggris"
        android:textSize="12sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="#000000"/>

    <!-- BUTTON LIHAT -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="32dp">

        <!-- IMAGE BUTTON -->
        <ImageButton
            android:id="@+id/btnLihat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_181"
            android:scaleType="centerCrop"
            android:contentDescription="Lihat"/>

        <!-- TEXT DI ATAS IMAGE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat"
            android:textSize="12sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </FrameLayout>

</LinearLayout>