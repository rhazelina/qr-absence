<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_gravity="center_horizontal"
    android:padding="6dp"
    android:layout_marginBottom="3dp"
    android:background="@drawable/bar_jadwal_guru">

    <!-- Container untuk Mapel dan Pukul -->
    <LinearLayout
        android:id="@+id/containerKiri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/MataPelajaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Mapel - "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/txtLeftBottom_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pukul :"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"/>
    </LinearLayout>

    <!-- Container untuk Kelas dan Durasi - TETAP DI KANAN -->
    <LinearLayout
        android:id="@+id/containerKanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:gravity="end"
        app:layout_constraintEnd_toStartOf="@id/btnTampilkan_1"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/KelasJurusan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XII Mekatronika 2"
            android:textColor="@color/black"
            android:layout_marginBottom="3dp"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/DurasiPembelajaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00 - 00:00"
            android:textColor="@color/black"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Button Tampilkan -->
    <ImageButton
        android:id="@+id/btnTampilkan_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="6dp"
        android:background="@null"
        android:contentDescription="Tampilkan"
        android:src="@drawable/eyes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>