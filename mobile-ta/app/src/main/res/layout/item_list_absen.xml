<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bar_biru_detail"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- BAGIAN KIRI: NAMA + JURUSAN -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nomor_absen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nisn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="0096785678"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nama_siswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Siswa"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- BAGIAN KANAN: RADIO BUTTONS -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/radio_hadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginRight="25dp"
            android:src="@drawable/radiobutton_off" />

        <ImageButton
            android:id="@+id/radio_izin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginRight="23dp"
            android:src="@drawable/radiobutton_off" />

        <ImageButton
            android:id="@+id/radio_sakit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginRight="23dp"
            android:src="@drawable/radiobutton_off" />

        <ImageButton
            android:id="@+id/radio_alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginRight="13dp"
            android:src="@drawable/radiobutton_off" />
    </LinearLayout>
</LinearLayout>