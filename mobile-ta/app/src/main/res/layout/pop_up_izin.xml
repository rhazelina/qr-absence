<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/bg_ajukan_dispensasi"
    android:padding="20dp">

    <!-- Judul -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Perizinan"
        android:textSize="30sp"
        android:layout_marginBottom="25dp"
        android:textStyle="bold"
        android:textColor="#28425C"
        android:layout_marginTop="15dp"/>

    <!-- Nama Lengkap -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Lengkap Siswa"
        android:layout_gravity="start"
        android:textSize="16sp"
        android:textColor="#303030"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:id="@+id/btn_dropdown_nama_siswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_izin_guru"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_marginBottom="15dp">

        <EditText
            android:id="@+id/input_nama_siswa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:backgroundTint="@null"
            android:hint="Pilih Nama Siswa"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textStyle="bold"
            android:paddingEnd="8dp"
            android:singleLine="true"
            android:imeOptions="actionDone"/>
        <ImageButton
            android:id="@+id/btn_dropdown_siswa"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_dropdown2"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/box_bukti_surat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_izin_guru"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/namafile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Masukkan Butki Surat(izin/sakit)"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textStyle="bold"
            android:paddingEnd="8dp"
            android:singleLine="true"
            android:imeOptions="actionDone"/>

        <ImageButton
            android:id="@+id/btn_tambahkanfile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/add_2"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <!-- Jam & Tanggal -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Jam -->
        <LinearLayout
            android:id="@+id/layout_jam_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam"
                android:textSize="16sp"
                android:textColor="#303030"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <!-- Jam Mulai -->
            <LinearLayout
                android:id="@+id/btn_dropdown_jam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_dropbox"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_marginBottom="6dp">

                <EditText
                    android:id="@+id/input_jam"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@null"
                    android:hint="Mulai"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textStyle="bold"
                    android:paddingEnd="4dp"
                    android:singleLine="true"
                    android:focusable="false"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/btn_set_clock"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/mini_clock"/>
            </LinearLayout>

            <!-- Pemisah -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sampai"
                android:textSize="12sp"
                android:textColor="#303030"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="6dp"/>

            <!-- Jam Selesai -->
            <LinearLayout
                android:id="@+id/btn_dropdown_jam_selesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_dropbox"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_marginBottom="15dp">

                <EditText
                    android:id="@+id/input_jam_selesai"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@null"
                    android:hint="Selesai"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textStyle="bold"
                    android:paddingEnd="4dp"
                    android:singleLine="true"
                    android:focusable="false"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/btn_set_clock_selesai"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/mini_clock"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Tanggal -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Berlaku"
                android:textSize="16sp"
                android:textColor="#303030"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:id="@+id/btn_select_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_dropbox"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_marginBottom="15dp">

                <EditText
                    android:id="@+id/input_tanggal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@null"
                    android:hint="Masukan"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textStyle="bold"
                    android:paddingEnd="8dp"
                    android:singleLine="true"
                    android:imeOptions="actionDone"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/mini_calendar"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Catatan -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catatan"
        android:layout_gravity="start"
        android:textSize="16sp"
        android:textColor="#303030"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/box_catatan"
        android:layout_marginBottom="15dp">

        <EditText
            android:id="@+id/et_catatan"
            android:layout_width="325dp"
            android:layout_height="100dp"
            android:hint="Tambahkan Catatan"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textStyle="bold"
            android:gravity="top|start"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:backgroundTint="@null"
            android:inputType="textMultiLine"
            android:minWidth="250dp"
            android:minHeight="80dp"/>
    </FrameLayout>

    <!-- Tombol -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kirim_izin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_kirimizin"
            android:backgroundTint="@null"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_batal_izin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_batalizin"
            android:backgroundTint="@null"/>
    </LinearLayout>

</LinearLayout>