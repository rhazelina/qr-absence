<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background solid -->
    <solid android:color="#FFFFFF"/>

    <!-- Rounded corner -->
    <corners android:radius="15dp"/>

    <!-- Border tipis -->
    <stroke
        android:width="2dp"
        android:color="#E0E0E0" />  <!-- abu muda -->

    <!-- Padding internal -->
    <padding
