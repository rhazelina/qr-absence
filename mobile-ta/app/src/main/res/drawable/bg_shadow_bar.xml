<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Tetap pakai gambar SVG aslinya -->
    <item android:drawable="@drawable/bar_absen_kelas" />

    <!-- Overlay stroke + rounded + semi shadow -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent"/>

            <!-- 70% transparency -->
            <stroke
                android:width="1dp"
                android:color="#C0C0C0"/>

            <corners android:radius="12dp"/>
        </shape>
    </item>

</layer-list>
