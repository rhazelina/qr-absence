{
  "name": "absensi-kelas",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite --port 5180 --strictPort",
    "electron:dev": "concurrently \"bun run dev\" \"wait-on -t 30000 http://127.0.0.1:5180 && ./node_modules/.bin/electron .\"",
    "electron:run": "bun exec electron .",
    "build": "tsc -b && vite build",
    "electron:build": "bun run build && bun exec electron-builder",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "chart.js": "^4.5.1",
    "framer-motion": "^12.29.2",
    "html5-qrcode": "^2.3.8",
    "jspdf": "^4.1.0",
    "jspdf-autotable": "^5.0.7",
    "lenis": "^1.3.17",
    "lucide-react": "^0.563.0",
    "react": "^19.1.1",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.4",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@tailwindcss/postcss": "^4.2.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.1.2",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "tailwindcss": "^4.2.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.qr-absence.deskta",
    "productName": "Deskta",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "public/logo smk.png"
    ],
    "extraResources": [
      {
        "from": "public/logo smk.png",
        "to": "assets/icon.png"
      }
    ],
    "linux": {
      "target": "AppImage",
      "icon": "public/logo smk.png"
    },
    "win": {
      "target": "portable",
      "icon": "public/logo smk.png"
    }
  }
}